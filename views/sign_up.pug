extends layout

block content
  div.sign-up-wrapper
    h1 Sign Up
    form(method="post")
      div.form-control
        label(for="username") Username:
        input#username(type="text" name="username" required value=(newUser===undefined ? '' : newUser.username))
      div.form-control
        label(for="first_name") First Name:
        input#first_name(type="text" name="first_name" required value=(newUser===undefined ? '' : newUser.first_name))
      div.form-control
        label(for="last_name") Last Name:
        input#last_name(type="text" name="last_name" required value=(newUser===undefined ? '' : newUser.last_name))
      div.form-control
        label(for="password") Password:
        input#password(type="password" name="password" required)
      div.form-control
        label(for="confirm_password") Confirm Password:
        input#confirm_password(type="password" name="confirm_password" required)
      div.submit-button
        button(type="submit") Sign Up
  if errors
    div.errors
      for error in errors
        p ERROR: #{error.msg}