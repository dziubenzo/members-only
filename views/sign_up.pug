extends layout

block content
  div.sign-up-wrapper
    h1 Sign Up Form
    form(method="post")
      div.form-control
        label(for="username") Username:
        input#username(type="text" name="username" required value=(user===undefined ? '' : user.username))
      div.form-control
        label(for="first-name") First Name:
        input#first-name(type="text" name="first-name" required value=(user===undefined ? '' : user.first_name))
      div.form-control
        label(for="last-name") Last Name:
        input#last-name(type="text" name="last-name" required value=(user===undefined ? '' : user.last_name))
      div.form-control
        label(for="password") Password:
        input#password(type="password" name="password" required)
      div.form-control
        label(for="confirm-password") Confirm Password:
        input#confirm-password(type="password" name="confirm-password" required)
      div.submit-button
        button(type="submit") Sign Up
  if errors
    div.errors
      for error in errors
        p ERROR: #{error.msg}